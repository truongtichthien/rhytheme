@import '../../../../node_modules/nib'

//function definition
backgroundImg(hex)
  background hex url('../../../images/grain.png')

@font-face {
  font-family bazar
  src url(../../../fonts/bazar.ttf)
}

// common used style
.app-container
  max-width 96rem
  margin 0 auto

.dashed-line
  margin 0
  border-top 1px dashed rgba(0, 0, 0, 0.25)
  border-bottom 1px dashed rgba(255, 255, 255, 0.25)
  position absolute
  z-index 9
  width 100%
  height 0
  background-color transparent

.top.dashed-line
  top 1rem

.bottom.dashed-line
  bottom 1rem

.app-main
.app-footer
  position relative
  padding 3rem 0

// specific used style
.app-header
  backgroundImg(#e68966)
  box-shadow 0 0 0.5rem rgba(0, 0, 0, 0.25)
  height 13rem
  position fixed
  top 0
  left 0
  right 0
  z-index 98

  .app-navbar
    padding 0
    margin 0
    text-align center
    list-style none

    .menu-item
      float left
      width 20%
      padding 4rem 0 4.7rem
      font-family bazar
      font-size 2.7rem
      text-transform uppercase

      .link
        color #f6edd8
        display inline-block
        margin-top 0.5rem
        transition margin-top 0.2s ease
        text-shadow 0 0.2rem 0.2rem rgba(0, 0, 0, 0.2)
      .link:hover
        margin-top 0
        text-decoration none

    .app-logo
      float left
      width 20%
      height 13rem
      position relative
      z-index 99

      .logo
        margin-top -3rem
        transition margin-top 0.2s ease
      .logo:hover
        margin-top 0

.app-main
  z-index 1
  height 100rem
  margin-top 13rem
  backgroundImg(#e6e1d0)

.app-footer
  backgroundImg(#4c5057)
  color #ddd