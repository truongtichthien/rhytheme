@import '../../../../../node_modules/nib'

$headerHeight = 10rem
$footerHeight = 4.8rem
$mainColor = #383a3c
$offset1 = (100 / 12) %
$offset2 = (100 / 6) %

backgroundImg(hex)
  background hex url('../../../../images/grain.png')

.section-about
  padding-bottom 1.6rem
  .about-content
    margin 2.4rem(-1rem) 0

    .about-row
      display flex
      padding 0 1rem

      .about-block
        flex 1
        position relative
        padding 0 2rem
        margin-bottom 2rem

        &.left-border
          border-left 0.2rem $mainColor solid

          &:before
            content ''
            position absolute
            top 0
            bottom 0
            left - 0.6rem
            width 0.2rem
            background $mainColor

        &:nth-child(even)
          margin-left 8.33333333%

        .block-title
          margin-top 0.5rem
          font-size 1.6rem
          //font-family 'Bazar'
          text-transform uppercase

          .highlighted
            color #ad4d32
            font-size 2.4rem

        .paragraph
          &.with-icon
            display flex
            align-items center
          &.quote
            font-family 'Oswald'
            font-size 1.6rem
            //font-style italic
          &.justify
            text-align justify
          &.spacious
            word-spacing 1rem

          &:first-child
            margin-top 0.7rem

          .icon
            min-width 3.2rem
            max-height 2.8rem
            font-size 2.4rem

            &.fa-skype
              font-size 3.2rem

          .text
            flex 1
            margin-left 0.6rem

            .link
              color $mainColor

              &:hover
                text-decoration underline dotted

      .bolder
        font-family 'Oswald Bold'

@media (max-width 768px)
  .section-about
    .about-content
      .about-row
        display block
        .about-block
          margin 0 $offset1
