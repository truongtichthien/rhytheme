@import '../../../../../node_modules/nib'

$headerHeight = 100px
$footerHeight = 68px
$mainColor = #383a3c
$offset1 = (100 / 12) %
$offset2 = (100 / 6) %

backgroundImg(hex)
  background hex url('../../../../images/grain.png')

.app-header
  backgroundImg(#e49679)
  position fixed
  top 0
  left 0
  right 0
  z-index 88
  box-shadow 0 1px 5px rgba(0, 0, 0, 0.25)
  border-bottom 1px solid rgba(0, 0, 0, 0.15)

  .app-container
    height $headerHeight
    backgroundImg(#e68966)

  .app-navbar
    padding 0
    margin 0
    text-align center
    list-style none
    display flex

    .menu-item
      float left
      width 20%
      padding 30px 0
      font-family 'Bazar'
      font-size 27px
      text-transform uppercase
      flex 2

      .link
        color #f6edd8
        display inline-block
        position relative
        transition margin-top 0.2s ease
        text-shadow 0 3px 3px rgba(0, 0, 0, 0.2)

        &:hover
          color #ffefca
          text-decoration none
        &:focus
          text-decoration none
        &.active:before,
        &.active:after
          content '..'
          position absolute
          top - 15px
        &.active:before
          left - 15px
        &.active:after
          right - 15px

    .app-logo
      float left
      flex 1
      height $headerHeight
      position relative
      z-index 89

      .logo
        margin-top - 20px
        transition margin-top 0.2s ease
        &:hover
          margin-top - 10px
