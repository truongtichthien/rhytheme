@import '../../../../../node_modules/nib'

$headerHeight = 10rem
$footerHeight = 6.8rem
$mainColor = #383a3c
$offset1 = (100 / 12) %
$offset2 = (100 / 6) %

backgroundImg(hex)
  background hex url('../../../../images/grain.png')

.section-heading
  padding-bottom 1.6rem

  .section-title
    font-size 4.5rem
    font-family 'Bazar'
    text-align center
    text-transform uppercase
    text-shadow 0.1rem 0.2rem #fcfaf7, 0.3rem 0.4rem #484a4d
    padding-top 1.6rem
    margin-top 3.2rem
    margin-bottom 0.6rem
    font-weight bold
    letter-spacing 1.6rem

  .section-subtitle
    text-align center
    font-family Oswald
    text-transform uppercase
    font-size 1.4rem

  .section-separator
    text-align center
    font-size 2rem
    line-height 2.2rem
    color rgba(56, 58, 60, 0.75)

    .solid-line
      position relative
      display inline-block
      width 4.5rem
      &:before
      &:after
        content ''
        width 4.5rem
        position absolute
        top 1.1rem
        border-bottom 0.1rem rgba(56, 58, 60, 0.75) solid
      &:before
        right 100%
      &:after
        left 100%
